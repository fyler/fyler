%% -*- mode: Erlang; -*-
{lib_dirs, ["apps", "deps"]}.
{sub_dirs, [
  "rel",
  "apps/fyler"
]}.
{require_otp_vsn, "R16"}.
{deps, [
  {lager, ".*", {git, "git://github.com/basho/lager.git", "master"}},
  {cowboy, ".*", {git, "https://github.com/extend/cowboy.git", {branch, "master"}}},
  {mimetypes, ".*",{git,"https://github.com/spawngrid/mimetypes.git",{branch,"master"}}},
  {ibrowse, ".*", {git, "https://github.com/cmullaparthi/ibrowse.git"},"master"},
  {http_file, ".*", {git, "https://github.com/palkan/http_file.git", {branch, "master"}}},
  {ulitos, ".*", {git, "https://github.com/palkan/ulitos.git", {branch, "master"}}}
]}.
{erl_opts, [debug_info, {i, "apps"}, warnings_as_errors, warn_unused_vars, {parse_transform, lager_transform}]}.
{cover_enabled, true}.
{clean_files, ["*.eunit", "ebin/*.beam"]}.
{eunit_opts, [verbose,
  {report, {eunit_surefire, [{dir, "."}]}}]}.

